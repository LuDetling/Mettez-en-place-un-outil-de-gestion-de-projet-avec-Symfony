{% extends 'base.html.twig' %}

{% block title %}Ajouter une voiture
{% endblock %}

{% block body %}
	{{ form_start(form) }}

	<section id="add">
		<a href="{{ path("home") }}">‚Üê Retour</a>
		<h1>Ajouter une voiture</h1>
		<div class="input">
			{{ form_row(form.name) }}
		</div>
		<div class="input">
			{{ form_row(form.description) }}
		</div>
		<div class="flex-input">
			<div class="input">
				{{ form_row(form.prix_location) }}
			</div>
			<div class="input">
				{{ form_row(form.prix_day) }}
			</div>
		</div>
		<div class="flex-input">
			<div class="input">
				{{ form_row(form.seat) }}
			</div>
			<div class="input">
				{{ form_row(form.gearbox) }}
			</div>
		</div>

		<button type="submit" class="btn-add">Ajouter</button>
	</section>
	{{ form_end(form) }}
{% endblock %}
